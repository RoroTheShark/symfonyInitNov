{% extends "parent.html.twig" %}

{% block contenu %}

<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Date de parution</th>
            <th>Nb de pages</th>
        </tr>
    </thead>

    <tbody>

        {% for book in books %}

        <tr>
            <td>{{book.title}}</td>
            <td>{{book.publishedDate|date('d/m/Y')}}</td>
            <td>{{book.nbOfPages}}</td>
        </tr>
            
        {% endfor %}


    </tbody>
</table>

{% endblock %}